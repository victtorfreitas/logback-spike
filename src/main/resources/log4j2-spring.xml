<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout
                    pattern="%clr{%d{yyyy-MM-dd HH:mm:ss.SSS}}{faint} %clr{%5p} %clr{THREAD_ID: [%tid]}{magenta} %clr{%X{CORRELATION_ID}}{yellow} %clr{:}{faint} %msg%n%xwEx"/>
        </Console>
        <File name="File" fileName="logs/servicearchive.log" filePattern="logs/servicearchive-%d{yyyy-MM-dd}.log">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p THREAD_ID: [%tid]{magenta} %clr{%X{CORRELATION_ID}}{yellow}: %m%n%xwEx"
                    charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
        </File>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <Appender-ref ref="File" level="INFO"/>
        </Root>
        <Logger name="br.com.spikelogbackintercept" level="INFO"
                additivity="false">
            <Appender-ref ref="Console" level="INFO"/>
        </Logger>
    </Loggers>
</Configuration>